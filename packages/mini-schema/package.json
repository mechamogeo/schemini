{
  "name": "mini-schema",
  "version": "0.1.0",
  "description": "TypeScript-first schema validation library with JSON Schema support",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./json-schema": {
      "types": "./dist/json-schema/index.d.ts",
      "import": "./dist/json-schema/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "schema",
    "validation",
    "typescript",
    "json-schema",
    "type-inference",
    "runtime-validation"
  ],
  "author": "mechamogeo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mechamogeo/mini-schema.git"
  },
  "bugs": {
    "url": "https://github.com/mechamogeo/mini-schema/issues"
  },
  "homepage": "https://github.com/mechamogeo/mini-schema#readme",
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "dependencies": {
    "libphonenumber-js": "^1.12.33"
  }
}
